{
  "manifest_version": 3,
  "name": "Class Sync",
  "version": "1.0",
  "description": "Sync Canvas calendar events with Outlook.",
  "permissions": [
    "identity",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://wwu.instructure.com/*",
    "https://graph.microsoft.com/*"
  ],
  "background": {
    "service_worker": "./js/background.js"
  },
  "action": {
    "default_popup": "./html/popup.html",
    "default_icon": {
      "16": "./icons/icon16.png",
      "32": "./icons/icon32.png"
    }
  },
  "icons": {
    "16": "./icons/icon16.png",
    "32": "./icons/icon32.png"
  },
  "oauth2": {
    "client_id": "<YOUR_MICROSOFT_CLIENT_ID>",
    "scopes": [
      "Calendars.ReadWrite"
    ]
  }
  // "canvas_access_token": "10~H9HX47nfATD7yVfaXPGMrPz2HUG74MkKDMXW8DvF7wWQAt6fRAx6xfkLBB9UkRPV"
}